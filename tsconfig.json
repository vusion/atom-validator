{
  "compilerOptions": {
    "target": "es5",
    "module": "es6",
    "noImplicitAny": true,
    "lib": [
      "es5",
      "es2015",
      "es2016",
      "es2017",
      "dom"
    ],
    "rootDir": "src",
    "outDir": "out",
    "sourceMap": true,
    "pretty": true,
    "downlevelIteration": true,
  },
  "exclude": [
    "node_modules",
    ".vscode-test"
  ],
  "ts-node": {
    // these options are overrides used only by ts-node
    // same as the --compilerOptions flag and the TS_NODE_COMPILER_OPTIONS environment variable
    "compilerOptions": {
      "module": "commonjs",
      "esModuleInterop": true,
      "downlevelIteration": true,
    }
  }
}
